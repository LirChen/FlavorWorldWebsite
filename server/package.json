{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "test": "cross-env NODE_ENV=test vitest run",
    "test:watch": "cross-env NODE_ENV=test vitest watch",
    "test:ui": "cross-env NODE_ENV=test vitest --ui",
    "test:coverage": "cross-env NODE_ENV=test vitest run --coverage",
    "test:chats": "cross-env NODE_ENV=test vitest run tests/routes/chats.test.js",
    "test:chats:watch": "cross-env NODE_ENV=test vitest watch tests/routes/chats.test.js",
    "test:auth": "cross-env NODE_ENV=test vitest run tests/routes/auth.test.js",
    "test:auth:watch": "cross-env NODE_ENV=test vitest watch tests/routes/auth.test.js",
    "test:users": "cross-env NODE_ENV=test vitest run tests/routes/users.test.js",
    "test:users:watch": "cross-env NODE_ENV=test vitest watch tests/routes/users.test.js",
    "test:unit": "cross-env NODE_ENV=test vitest run tests/routes/",
    "test:feed": "cross-env NODE_ENV=test vitest run tests/routes/feed.test.js",
    "test:feed:watch": "cross-env NODE_ENV=test vitest watch tests/routes/feed.test.js",
    "test:notifications": "cross-env NODE_ENV=test vitest run tests/routes/notifications.test.js",
    "test:integration": "cross-env NODE_ENV=test vitest run tests/integration/",
    "test:e2e": "cross-env NODE_ENV=test vitest run tests/e2e/",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk ./node_modules/.bin/vitest run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@vitest/ui": "^1.0.4",
    "mongodb-memory-server": "^9.1.3",
    "supertest": "^6.3.3",
    "vitest": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4"
  }
}
